<form name="widget-form-{{type}}">
  <div class="form-group">
    <label for="widget-form-{{type}}-title">{{t 'title'}}</label>
    <input name="title" value="{{title}}" type="text" class="form-control" id="widget-form-{{type}}-title" placeholder="{{t 'widget.title'}}">
  </div>

  {{!-- add your custom form fields here... --}}

  <div class="form-group">
    <label for="widget-form-{{type}}-html">{{t 'disqus.widget.form.shortname.label'}}</label>
    <input required="required" type="text" id="widget-form-{{type}}-html" name="disqus_shortname" value="{{configuration.disqus_shortname}}">
    <p class="help-block">{{t 'disqus.widget.form.shortname.helper'}}</p>
  </div>

  {{{controllFields}}}

  {{#if id}}
    <input type="hidden" name="id" value="{{id}}">
    <button type="submit" class="btn btn-primary">Save</button>
    <button type="submit" data-dismiss="modal" class="btn btn-default">Cancel</button>
  {{else}}
    <button type="submit" class="btn btn-primary">Add</button>
    <button type="submit" data-dismiss="modal" class="btn btn-default">Cancel</button>
  {{/if}}
</form>